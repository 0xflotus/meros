{
	"name": "meros",
	"version": "0.0.3",
	"description": "A fast utility for reading streamed multipart responses.",
	"keywords": [
		"multipart",
		"multipart mixed",
		"fetch",
		"utility",
		"reader"
	],
	"repository": "maraisr/meros",
	"license": "MIT",
	"author": {
		"name": "Marais Rossouw",
		"email": "me@marais.dev",
		"url": "https://marais.io"
	},
	"exports": {
		".": [
			{
				"import": "./dist/index.mjs",
				"require": "./dist/index.js"
			},
			"./dist/index.js"
		]
	},
	"main": "dist/index.js",
	"unpkg": "dist/index.min.js",
	"module": "dist/index.mjs",
	"types": "types/index.d.ts",
	"files": [
		"dist",
		"types"
	],
	"scripts": {
		"bench": "node -r ts-node/register bench/index.ts",
		"build": "rollup -c",
		"format": "prettier \"{*,tests/*,src/*,bench/*,.github/**/*}.+(ts|js|yml|md)\" --write",
		"prepublishOnly": "yarn build",
		"test": "uvu -r ts-node/register -i util -i prelude tests"
	},
	"prettier": {
		"bracketSpacing": true,
		"printWidth": 80,
		"proseWrap": "always",
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	},
	"devDependencies": {
		"@marais/tsconfig": "^0.0.1",
		"@rollup/plugin-node-resolve": "10.0.0",
		"@types/benchmark": "^2.1.0",
		"@types/node": "^14.14.6",
		"benchmark": "^2.1.4",
		"fetch-multipart-graphql": "^2.1.0",
		"node-fetch": "^2.6.1",
		"prettier": "^2.1.2",
		"rollup": "2.33.1",
		"rollup-plugin-terser": "7.0.2",
		"rollup-plugin-typescript2": "0.29.0",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.5",
		"uvu": "^0.4.0",
		"web-streams-polyfill": "^3.0.0"
	},
	"engines": {
		"node": ">=10"
	},
	"volta": {
		"node": "15.0.1",
		"yarn": "1.22.5"
	}
}
